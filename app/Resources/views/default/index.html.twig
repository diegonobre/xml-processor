{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h2>Person XML</h2>
        <div class="well">
            <h4>Choose your file:</h4>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
<!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        // file-input validations
        $('#post_imgName').fileinput({
            allowedFileExtensions: ["xml", "XML"],
            maxFileSize: 20480,
        });
    </script>
{% endblock %}
